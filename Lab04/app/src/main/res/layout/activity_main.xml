<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="309dp"
        android:layout_height="324dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="180dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="309dp"
        android:layout_height="60dp"
        android:backgroundTint="#0667B5"
        android:text="좋아요!"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/textView2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      인스타"
        android:textSize="21dp"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintRight_toLeftOf="@id/textView2_2"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/textView2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#오늘도체크업"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        app:layout_constraintLeft_toRightOf="@id/textView2_1"
        app:layout_constraintRight_toLeftOf="@id/textView2_3"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/textView2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="챌린지   "
        android:textSize="21dp"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        app:layout_constraintLeft_toRightOf="@id/textView2_2"
        app:layout_constraintRight_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 하나로 매일 체크업하는 닥클!\n친구들에게 공유해주세요"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView2_2"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintRight_toRightOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/button3"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="280dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon0"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="194dp"
        app:layout_constraintBottom_toTopOf="@id/textView2_2"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintRight_toRightOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/icon1"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="79dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintRight_toLeftOf="@id/button2"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/icon2"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="75dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintRight_toLeftOf="@id/button3"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/icon4"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="69dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintRight_toRightOf="@id/textView"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@drawable/icon3"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="27dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintRight_toLeftOf="@id/button4"/>

</androidx.constraintlayout.widget.ConstraintLayout>